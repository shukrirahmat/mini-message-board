<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>

<body>

  <%- include('./partials/nav.ejs') %>

  <h1>MESSAGES</h1>
  <div class="messageContainer">
    <% if (messages.length) { %>
    <% messages.forEach((message) => { %>
    <div class="message">
      <h2><%= message.user %></h2>
      <p><%= message.text %></p>
      <p><%= message.added %></p>
    </div>
    <% }); %>
    <% } %>
  </div>

</body>

</html>